@import "../../../assets/stylus/mixins.styl"
#header
  position fixed
  top 0
  left 0
  z-index 10
  width 100%
  background #fff
  border-bottom 1px solid #d9d9d9
  .header-top
    display flex
    flex-flow row nowrap
    align-items center
    background #fff
    padding .21333rem .4rem
    .logo
      width 1.84rem
      height .53333rem
      background-image url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/indexLogo-11d65342f9.png);
      display inline-block
      margin-right .26667rem
      background-size cover
      background-position center
    .search
      flex-grow 1
      display flex
      justify-content center
      height .74667rem
      font-size .37333rem
      background-color #ededed
      border-radius .10667rem
      text-align center
      line-height .74667rem
      color #666
      .icon
        display inline-block;
        vertical-align middle;
        background-image url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png);
        background-repeat no-repeat
        background-size 100% 100%;
        width .37333rem
        height .37333rem
        margin-right .13333rem
        margin-top .2rem

    .btn
      width .98667rem
      height .53333rem
      line-height .53333rem
      text-align center
      color #b4282d
      border 1px solid #b4282d
      border-radius .10667rem
      margin-left .21333rem
      font-size .32rem
  .header-bottom
    background #fff
    margin-top -.01333rem
    position relative
    .inner-left
      display flex
      flex-flow: row nowrap
      background-color #fff
      padding-right 1.33333rem
      li
        padding 0 .21333rem
        margin-left .34rem
        line-height .8rem
        font-size .37333rem
        color #777
        font-weight 700
        text-align center
        &.active
          a
            padding-bottom 4px
            color #b4282d
            border-bottom 2px solid #b4282d
    .inner-right
      position absolute
      top 0
      right 0
      width 1.33333rem
      height .8rem
      text-align center
      line-height .8rem
      .inner-icon
        margin-top -.3rem
        display inline-block
        vertical-align middle
        background-image url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/arrow-down-3-a6045aadfd.png)
        background-repeat no-repeat
        background-size 100% 100%
        width .4rem
        height .4rem
.swiper-container
  width 100%
  height 4.93333rem
  margin-top 74.48px
  .swiper-wrapper
    width 100%
    height 100%
    .swiper-slide
      display flex
      justify-content center
      align-items flex-start
      flex-wrap wrap
      img
        width 100%
        height 4.93333rem
  .swiper-pagination
    bottom 0.4rem
    .swiper-pagination-bullet
      width .53333rem
      height .05333rem
      display inline-block
      background #fff
      opacity .4
      border-radius 0
      margin 0 .13333rem 0 0
    .swiper-pagination-bullet-active
      opacity 1
      background #fff!important
      border-radius 0
.servicePolicy
  background #fff
  .g-grow
    width 100%
    height .96rem
    padding 0 .4rem
    display flex
    align-items center
    .item
      flex 1
      a
        display inline-block
        height .42667rem
        line-height .42667rem
        .service_icon
          display inline-block
          width .42667rem
          height .42667rem
          vertical-align middle
          background-image url("http://yanxuan.nosdn.127.net/cae45612b8aae577d8bd73338e2fc02c.png")
          background-repeat no-repeat
          background-size 100% 100%
        span
          margin-left -6px
          line-height .42667rem
          display inline-block
          vertical-align middle
          font-size .32rem
          background-color #FFFFFF
          color #B4282D
.s-carousel
  width 100%
  height 5.22667rem
  padding-bottom .69333rem
  .s-carousel-item
    float left
    width 1.46667rem
    height 2.08rem
    margin .3rem .26667rem 0
    img
      width 1.46667rem
      height 1.46667rem
    .text
      margin-top .13333rem
      text-align center
      font-size .32rem
      line-height .48rem
      white-space nowrap
      color #333333
.s-bossRecommendModule
  width 100%
  height 2.13333rem
  img
    width 100%
    height 100%
.s-sceneLightShoppingGuideModule
  overflow hidden
  padding .13333rem .4rem .4rem .34667rem
  background #fff
  margin-bottom .26667rem
  .s-sceneLightShoppingGuideModule-item
    width 4.57333rem
    height 3.52rem
    float left
    margin .05333rem 0 0 .05333rem
    padding .26667rem 0 0 .26667rem
    border-radius .05333rem
    background #eee
    .title
      padding-left .13333rem
      font-size .42667rem
      font-family PingFangSC-Medium
      color #333333
    .desc
      padding-left .13333rem
      font-size .32rem
      color #7f7f7f
      margin-top .1333rem
    .images
      width: 100%
      clearFix()
      img
        width 2rem
        height 2rem
        float left
        margin-right .05333rem

.s-bottom
  width 100%
  border-top 1px solid rgba(0,0,0,.15)
  background-color #414141
  .s-b-inner
    width 10rem
    margin-right auto
    margin-left auto
    text-align center
    padding .72rem .26667rem .37333rem
    .inner-header
      width 100%
      a
        width 2.29333rem
        height: .82667rem
        line-height .82667rem
        font-size .32rem
        color #fff
        margin-right .66667rem